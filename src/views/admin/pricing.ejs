<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pricing - Shadow Link Admin</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
      .admin-layout {
        display: flex;
        min-height: 100vh;
        background: var(--bg-alt);
      }

      .admin-sidebar {
        width: 260px;
        background: var(--bg-card);
        border-right: 1px solid var(--border-light);
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
        overflow-y: auto;
        z-index: 100;
      }

      .admin-sidebar__header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-light);
      }

      .admin-sidebar__logo {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .admin-sidebar__logo svg {
        width: 18px;
        height: 18px;
      }

      .admin-sidebar__nav {
        flex: 1;
        padding: 1rem 0;
      }

      .admin-sidebar__item {
        display: block;
        padding: 0.75rem 1.5rem;
        color: var(--muted);
        text-decoration: none;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.95rem;
      }

      .admin-sidebar__item:hover {
        background: var(--bg-alt);
        color: var(--text);
      }

      .admin-sidebar__item.active {
        background: rgba(175, 82, 222, 0.1);
        color: #AF52DE;
        border-right: 3px solid #AF52DE;
        font-weight: 500;
      }

      .admin-sidebar__item svg {
        width: 20px;
        height: 20px;
      }

      .admin-sidebar__footer {
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--border-light);
        font-size: 0.85rem;
        color: var(--muted);
      }

      .admin-main {
        flex: 1;
        margin-left: 260px;
        display: flex;
        flex-direction: column;
      }

      .admin-header {
        background: var(--bg-card);
        border-bottom: 1px solid var(--border-light);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 50;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
      }

      .admin-header__title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text);
      }

      .admin-header__actions {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .admin-header__user {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: var(--bg-alt);
      }

      .admin-header__user-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, #AF52DE 0%, #8E44E8 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.9rem;
      }

      .admin-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
      }

      .pricing-card {
        background: var(--bg-card);
        border: 1px solid var(--border-light);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
      }

      .pricing-card__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
      }

      .pricing-card__title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text);
        margin: 0;
      }

      .pricing-form {
        display: flex;
        gap: 1rem;
        align-items: flex-end;
      }

      .price-input-group {
        flex: 1;
        max-width: 200px;
      }

      .price-input-group label {
        display: block;
        font-size: 0.85rem;
        color: var(--muted);
        margin-bottom: 0.5rem;
      }

      .price-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--bg);
        color: var(--text);
        font-size: 1rem;
        font-weight: 600;
      }

      .price-input:focus {
        outline: none;
        border-color: #AF52DE;
        box-shadow: 0 0 0 3px rgba(175, 82, 222, 0.1);
      }

      .save-btn {
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #AF52DE 0%, #8E44E8 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(175, 82, 222, 0.3);
      }

      .save-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(175, 82, 222, 0.5);
      }

      .save-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
      }

      .save-btn.success {
        background: var(--green);
      }

      .price-info {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-light);
        font-size: 0.85rem;
        color: var(--muted);
      }

      @media (max-width: 768px) {
        .admin-sidebar {
          transform: translateX(-100%);
          transition: transform 0.3s ease;
        }

        .admin-sidebar.open {
          transform: translateX(0);
        }

        .admin-main {
          margin-left: 0;
        }

        .pricing-form {
          flex-direction: column;
          align-items: stretch;
        }

        .price-input-group {
          max-width: 100%;
        }
      }
    </style>
  </head>
  <body class="admin">
    <div class="admin-layout">
      <!-- Sidebar -->
      <aside class="admin-sidebar">
        <div class="admin-sidebar__header">
          <a href="/admin" class="admin-sidebar__logo">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
            Shadow Link
          </a>
        </div>

        <nav class="admin-sidebar__nav">
          <a href="/admin" class="admin-sidebar__item" data-page="dashboard">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7"/>
              <rect x="14" y="3" width="7" height="7"/>
              <rect x="14" y="14" width="7" height="7"/>
              <rect x="3" y="14" width="7" height="7"/>
            </svg>
            Dashboard
          </a>
          <a href="/admin/transactions" class="admin-sidebar__item" data-page="transactions">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="1" x2="12" y2="23"/>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
            Transactions
          </a>
          <a href="/admin/activations" class="admin-sidebar__item" data-page="activations">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="8.5" cy="7" r="4"/>
              <path d="M20 8v6M23 11h-6"/>
            </svg>
            Activations
          </a>
          <a href="/admin/pricing" class="admin-sidebar__item active" data-page="pricing">
            <i class="bi bi-currency-dollar"></i>
            Pricing
          </a>
          <a href="/" class="admin-sidebar__item" target="_blank">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
            View Site
          </a>
        </nav>

        <div class="admin-sidebar__footer">
          <p style="margin: 0;">Admin Panel v1.0</p>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="admin-main">
        <!-- Header -->
        <header class="admin-header">
          <h1 class="admin-header__title">Pricing</h1>
          <div class="admin-header__actions">
            <div class="admin-header__user">
              <div class="admin-header__user-avatar">A</div>
              <div class="admin-header__user-info">
                <span class="admin-header__user-name">Admin</span>
                <span class="admin-header__user-role">Administrator</span>
              </div>
            </div>
            <button id="logout-btn" class="btn ghost" style="padding: 0.5rem 1rem;">
              Logout
            </button>
          </div>
        </header>

        <!-- Content -->
        <div class="admin-content">
          <div id="loading" style="text-align: center; padding: 3rem; color: var(--muted);">
            Loading...
          </div>

          <div id="pricing-container" style="display: none;">
            <!-- Pricing cards will be inserted here -->
          </div>
        </div>
      </main>
    </div>

    <script>
      // Set active menu item
      const currentPath = window.location.pathname;
      const menuItems = document.querySelectorAll('.admin-sidebar__item[data-page]');
      menuItems.forEach(item => {
        const page = item.getAttribute('data-page');
        if (currentPath.includes(page)) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });

      // Logout handler
      document.getElementById('logout-btn').addEventListener('click', async () => {
        try {
          const response = await fetch('/api/admin/logout', { method: 'POST' });
          const result = await response.json();
          if (result.success) {
            window.location.href = result.redirect || '/admin/login';
          }
        } catch (error) {
          console.error('Logout error:', error);
          window.location.href = '/admin/login';
        }
      });

      // Load pricing data
      async function loadPricing() {
        try {
          const response = await fetch('/api/admin/plan-prices');
          if (!response.ok) {
            if (response.status === 401) {
              window.location.href = '/admin/login';
              return;
            }
            throw new Error('Failed to load pricing');
          }

          const result = await response.json();
          if (result.success) {
            const container = document.getElementById('pricing-container');
            container.innerHTML = result.data.map(plan => `
              <div class="pricing-card" data-plan-id="${plan.planId}">
                <div class="pricing-card__header">
                  <h2 class="pricing-card__title">${plan.label}</h2>
                </div>
                <form class="pricing-form" onsubmit="updatePrice(event, '${plan.planId}')">
                  <div class="price-input-group">
                    <label>Price (USD)</label>
                    <input 
                      type="number" 
                      step="0.01" 
                      min="0" 
                      class="price-input" 
                      id="price-${plan.planId}"
                      value="${plan.price}"
                      required
                    />
                  </div>
                  <button type="submit" class="save-btn" id="save-btn-${plan.planId}">
                    <i class="bi bi-check-lg"></i> Save
                  </button>
                </form>
                <div class="price-info">
                  <p style="margin: 0;">Last updated: ${plan.updatedAt ? new Date(plan.updatedAt).toLocaleString() : 'Never'}</p>
                  <p style="margin: 0.25rem 0 0 0;">Updated by: ${plan.updatedBy || 'system'}</p>
                </div>
              </div>
            `).join('');

            document.getElementById('loading').style.display = 'none';
            container.style.display = 'block';
          }
        } catch (error) {
          console.error('Error loading pricing:', error);
          document.getElementById('loading').textContent = 'Error loading pricing data';
        }
      }

      // Update price
      async function updatePrice(event, planId) {
        event.preventDefault();
        const priceInput = document.getElementById(`price-${planId}`);
        const saveBtn = document.getElementById(`save-btn-${planId}`);
        const price = parseFloat(priceInput.value);

        if (isNaN(price) || price < 0) {
          alert('Please enter a valid price');
          return;
        }

        const originalText = saveBtn.innerHTML;
        saveBtn.disabled = true;
        saveBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Saving...';

        try {
          const response = await fetch('/api/admin/plan-prices', {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ planId, price })
          });

          const result = await response.json();

          if (result.success) {
            saveBtn.classList.add('success');
            saveBtn.innerHTML = '<i class="bi bi-check-lg"></i> Saved!';
            setTimeout(() => {
              saveBtn.classList.remove('success');
              saveBtn.innerHTML = originalText;
              saveBtn.disabled = false;
              // Reload to show updated info
              loadPricing();
            }, 2000);
          } else {
            throw new Error(result.error || 'Failed to update price');
          }
        } catch (error) {
          console.error('Error updating price:', error);
          alert('Failed to update price: ' + error.message);
          saveBtn.innerHTML = originalText;
          saveBtn.disabled = false;
        }
      }

      // Load on page load
      loadPricing();
    </script>
  </body>
</html>

