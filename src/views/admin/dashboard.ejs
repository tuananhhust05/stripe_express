<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Shadow Link Admin</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
      /* Purple Electricity Effect */
      @keyframes electricPulse {
        0%, 100% {
          box-shadow: 0 0 0 0 rgba(175, 82, 222, 0),
                      0 0 0 1px rgba(175, 82, 222, 0.3),
                      inset 0 0 20px rgba(175, 82, 222, 0.1);
        }
        50% {
          box-shadow: 0 0 0 2px rgba(175, 82, 222, 0.6),
                      0 0 20px rgba(175, 82, 222, 0.4),
                      inset 0 0 30px rgba(175, 82, 222, 0.2);
        }
      }

      @keyframes electricBorder {
        0%, 100% {
          border-color: rgba(175, 82, 222, 0.3);
          box-shadow: 0 0 0 0 rgba(175, 82, 222, 0);
        }
        50% {
          border-color: rgba(175, 82, 222, 0.8);
          box-shadow: 0 0 10px rgba(175, 82, 222, 0.3);
        }
      }

      .admin-layout {
        display: flex;
        min-height: 100vh;
        background: var(--bg-alt);
      }

      .admin-sidebar {
        width: 260px;
        background: var(--bg-card);
        border-right: 1px solid var(--border-light);
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
        overflow-y: auto;
        z-index: 100;
      }

      .admin-sidebar__header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-light);
      }

      .admin-sidebar__logo {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .admin-sidebar__logo svg {
        width: 18px;
        height: 18px;
      }

      .admin-sidebar__nav {
        flex: 1;
        padding: 1rem 0;
      }

      .admin-sidebar__item {
        display: block;
        padding: 0.75rem 1.5rem;
        color: var(--muted);
        text-decoration: none;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.95rem;
        position: relative;
      }

      .admin-sidebar__item:hover {
        background: var(--bg-alt);
        color: var(--text);
      }

      .admin-sidebar__item.active {
        background: rgba(175, 82, 222, 0.1);
        color: #AF52DE;
        border-right: 3px solid #AF52DE;
        font-weight: 500;
        animation: electricBorder 2s ease-in-out infinite;
      }

      .admin-sidebar__item.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(180deg, #AF52DE 0%, #8E44E8 100%);
        box-shadow: 0 0 10px rgba(175, 82, 222, 0.5);
        animation: electricPulse 2s ease-in-out infinite;
      }

      .admin-sidebar__item svg {
        width: 20px;
        height: 20px;
      }

      .admin-sidebar__footer {
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--border-light);
        font-size: 0.85rem;
        color: var(--muted);
      }

      .admin-main {
        flex: 1;
        margin-left: 260px;
        display: flex;
        flex-direction: column;
      }

      .admin-header {
        background: var(--bg-card);
        border-bottom: 1px solid var(--border-light);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 50;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
      }

      .admin-header__title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text);
      }

      .admin-header__actions {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .admin-header__user {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: var(--bg-alt);
      }

      .admin-header__user-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, #AF52DE 0%, #8E44E8 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 0 10px rgba(175, 82, 222, 0.4);
        animation: electricPulse 2s ease-in-out infinite;
      }

      .admin-header__user-info {
        display: flex;
        flex-direction: column;
      }

      .admin-header__user-name {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--text);
      }

      .admin-header__user-role {
        font-size: 0.75rem;
        color: var(--muted);
      }

      .admin-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
      }

      @media (max-width: 768px) {
        .admin-sidebar {
          transform: translateX(-100%);
          transition: transform 0.3s ease;
        }

        .admin-sidebar.open {
          transform: translateX(0);
        }

        .admin-main {
          margin-left: 0;
        }
      }
    </style>
  </head>
  <body class="admin">
    <div class="admin-layout">
      <!-- Sidebar -->
      <aside class="admin-sidebar">
        <div class="admin-sidebar__header">
          <a href="/admin" class="admin-sidebar__logo">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
            Shadow Link
          </a>
        </div>

        <nav class="admin-sidebar__nav">
          <a href="/admin" class="admin-sidebar__item active" data-page="dashboard">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7"/>
              <rect x="14" y="3" width="7" height="7"/>
              <rect x="14" y="14" width="7" height="7"/>
              <rect x="3" y="14" width="7" height="7"/>
            </svg>
            Dashboard
          </a>
          <a href="/admin/transactions" class="admin-sidebar__item" data-page="transactions">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="1" x2="12" y2="23"/>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
            Transactions
          </a>
          <a href="/admin/activations" class="admin-sidebar__item" data-page="activations">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="8.5" cy="7" r="4"/>
              <path d="M20 8v6M23 11h-6"/>
            </svg>
            Activations
          </a>
          <a href="/admin/pricing" class="admin-sidebar__item" data-page="pricing">
            <i class="bi bi-currency-dollar"></i>
            Pricing
          </a>
          <a href="/" class="admin-sidebar__item" target="_blank">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
            View Site
          </a>
        </nav>

        <div class="admin-sidebar__footer">
          <p style="margin: 0;">Admin Panel v1.0</p>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="admin-main">
        <!-- Header -->
        <header class="admin-header">
          <h1 class="admin-header__title">Dashboard</h1>
          <div class="admin-header__actions">
            <div class="admin-header__user">
              <div class="admin-header__user-avatar">A</div>
              <div class="admin-header__user-info">
                <span class="admin-header__user-name">Admin</span>
                <span class="admin-header__user-role">Administrator</span>
              </div>
            </div>
            <button id="logout-btn" class="btn ghost" style="padding: 0.5rem 1rem;">
              Logout
            </button>
          </div>
        </header>

        <!-- Content -->
        <div class="admin-content">
          <!-- Loading state -->
          <div id="loading" style="text-align: center; padding: 3rem; color: var(--muted);">
            Loading...
          </div>

          <!-- Error state -->
          <div id="error" style="display: none; background: #ff3b30; color: white; padding: 1rem; border-radius: 8px; margin-bottom: 2rem;">
            <p style="margin: 0;" id="error-message"></p>
          </div>

          <!-- Stats -->
          <div id="stats-container" style="display: none; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
            <div style="background: var(--bg-card); border: 1px solid var(--border-light); border-radius: 16px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
              <p style="margin: 0 0 0.5rem 0; color: var(--muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em;">Total Transactions</p>
              <p style="margin: 0; color: var(--text); font-size: 2rem; font-weight: 600;" id="stat-total-transactions">0</p>
            </div>
            <div style="background: var(--bg-card); border: 1px solid var(--border-light); border-radius: 16px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
              <p style="margin: 0 0 0.5rem 0; color: var(--muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em;">Paid</p>
              <p style="margin: 0; color: var(--green); font-size: 2rem; font-weight: 600;" id="stat-total-paid">0</p>
            </div>
            <div style="background: var(--bg-card); border: 1px solid var(--border-light); border-radius: 16px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
              <p style="margin: 0 0 0.5rem 0; color: var(--muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em;">Total Activations</p>
              <p style="margin: 0; color: var(--text); font-size: 2rem; font-weight: 600;" id="stat-total-activations">0</p>
            </div>
            <div style="background: var(--bg-card); border: 1px solid var(--border-light); border-radius: 16px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
              <p style="margin: 0 0 0.5rem 0; color: var(--muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em;">Active</p>
              <p style="margin: 0; color: var(--green); font-size: 2rem; font-weight: 600;" id="stat-active-activations">0</p>
            </div>
          </div>

          <!-- Recent Transactions -->
          <section style="margin-bottom: 2rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
              <h2 style="margin: 0; color: var(--text); font-size: 1.5rem; font-weight: 600;">Recent Transactions</h2>
              <a href="/admin/transactions" class="btn ghost" style="padding: 0.5rem 1rem; font-size: 0.9rem;">View All</a>
            </div>
            <div style="background: var(--bg-card); border: 1px solid var(--border-light); border-radius: 16px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
              <table style="width: 100%; border-collapse: collapse;">
                <thead>
                  <tr style="background: var(--bg-alt); border-bottom: 1px solid var(--border-light);">
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Email</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Plan</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Amount</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Status</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Date</th>
                  </tr>
                </thead>
                <tbody id="transactions-tbody">
                  <tr>
                    <td colspan="5" style="padding: 2rem; text-align: center; color: var(--muted);">Loading...</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </section>

          <!-- Recent Activations -->
          <section>
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
              <h2 style="margin: 0; color: var(--text); font-size: 1.5rem; font-weight: 600;">Recent Activations</h2>
              <a href="/admin/activations" class="btn ghost" style="padding: 0.5rem 1rem; font-size: 0.9rem;">View All</a>
            </div>
            <div style="background: var(--bg-card); border: 1px solid var(--border-light); border-radius: 16px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
              <table style="width: 100%; border-collapse: collapse;">
                <thead>
                  <tr style="background: var(--bg-alt); border-bottom: 1px solid var(--border-light);">
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Code</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Email</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Plan</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Status</th>
                    <th style="padding: 1rem; text-align: left; color: var(--text); font-weight: 600; font-size: 0.9rem;">Date</th>
                  </tr>
                </thead>
                <tbody id="activations-tbody">
                  <tr>
                    <td colspan="5" style="padding: 2rem; text-align: center; color: var(--muted);">Loading...</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </section>
        </div>
      </main>
    </div>

    <script>
      // Set active menu item
      const currentPath = window.location.pathname;
      const menuItems = document.querySelectorAll('.admin-sidebar__item[data-page]');
      menuItems.forEach(item => {
        const page = item.getAttribute('data-page');
        if (currentPath === '/admin' && page === 'dashboard') {
          item.classList.add('active');
        } else if (currentPath.includes(page) && page !== 'dashboard') {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });

      // Logout handler
      document.getElementById('logout-btn').addEventListener('click', async () => {
        try {
          const response = await fetch('/api/admin/logout', { method: 'POST' });
          const result = await response.json();
          if (result.success) {
            window.location.href = result.redirect || '/admin/login';
          }
        } catch (error) {
          console.error('Logout error:', error);
          window.location.href = '/admin/login';
        }
      });

      // Load dashboard data
      async function loadDashboard() {
        try {
          // Load stats
          const statsRes = await fetch('/api/admin/stats');
          if (!statsRes.ok) {
            if (statsRes.status === 401) {
              window.location.href = '/admin/login';
              return;
            }
            throw new Error('Failed to load stats');
          }
          const statsData = await statsRes.json();
          
          // Load transactions
          const transactionsRes = await fetch('/api/admin/transactions?limit=10');
          if (!transactionsRes.ok) throw new Error('Failed to load transactions');
          const transactionsData = await transactionsRes.json();
          
          // Load activations
          const activationsRes = await fetch('/api/admin/activations?limit=10');
          if (!activationsRes.ok) throw new Error('Failed to load activations');
          const activationsData = await activationsRes.json();

          // Render stats
          if (statsData.success) {
            document.getElementById('stat-total-transactions').textContent = statsData.data.totalTransactions;
            document.getElementById('stat-total-paid').textContent = statsData.data.totalPaid;
            document.getElementById('stat-total-activations').textContent = statsData.data.totalActivations;
            document.getElementById('stat-active-activations').textContent = statsData.data.activeActivations;
            document.getElementById('stats-container').style.display = 'grid';
          }

          // Render transactions
          if (transactionsData.success) {
            const tbody = document.getElementById('transactions-tbody');
            if (transactionsData.data.length === 0) {
              tbody.innerHTML = '<tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--muted);">No transactions yet</td></tr>';
            } else {
              tbody.innerHTML = transactionsData.data.map(t => `
                <tr style="border-bottom: 1px solid var(--border-light);">
                  <td style="padding: 1rem; color: var(--text);">${t.email || 'N/A'}</td>
                  <td style="padding: 1rem; color: var(--text);">${t.plan || 'N/A'}</td>
                  <td style="padding: 1rem; color: var(--text);">${t.amountTotal ? `$${(t.amountTotal / 100).toFixed(2)}` : 'N/A'}</td>
                  <td style="padding: 1rem;">
                    <span style="padding: 0.25rem 0.75rem; border-radius: 999px; font-size: 0.85rem; background: ${t.status === 'paid' ? 'var(--green)' : '#ff9500'}; color: white;">
                      ${t.status || 'pending'}
                    </span>
                  </td>
                  <td style="padding: 1rem; color: var(--muted); font-size: 0.9rem;">
                    ${new Date(t.createdAt).toLocaleDateString()}
                  </td>
                </tr>
              `).join('');
            }
          }

          // Render activations
          if (activationsData.success) {
            const tbody = document.getElementById('activations-tbody');
            if (activationsData.data.length === 0) {
              tbody.innerHTML = '<tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--muted);">No activations yet</td></tr>';
            } else {
              tbody.innerHTML = activationsData.data.map(a => `
                <tr style="border-bottom: 1px solid var(--border-light);">
                  <td style="padding: 1rem; color: var(--text); font-family: monospace; font-size: 0.9rem; font-weight: 600;">${a.activationCode}</td>
                  <td style="padding: 1rem; color: var(--text);">${a.email || 'N/A'}</td>
                  <td style="padding: 1rem; color: var(--text);">${a.plan || 'N/A'}</td>
                  <td style="padding: 1rem;">
                    <span style="padding: 0.25rem 0.75rem; border-radius: 999px; font-size: 0.85rem; background: ${a.status === 'active' ? 'var(--green)' : '#ff3b30'}; color: white;">
                      ${a.status || 'inactive'}
                    </span>
                  </td>
                  <td style="padding: 1rem; color: var(--muted); font-size: 0.9rem;">
                    ${new Date(a.createdAt).toLocaleDateString()}
                  </td>
                </tr>
              `).join('');
            }
          }

          // Hide loading
          document.getElementById('loading').style.display = 'none';
        } catch (error) {
          console.error('Error loading dashboard:', error);
          document.getElementById('loading').style.display = 'none';
          document.getElementById('error').style.display = 'block';
          document.getElementById('error-message').textContent = error.message || 'Failed to load dashboard data';
        }
      }

      // Load data on page load
      loadDashboard();
    </script>
  </body>
</html>
